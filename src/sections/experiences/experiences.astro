---
import SectionContent from '../../layouts/section-content.astro';
import Experience from './experience/experience.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const { jobs } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<SectionContent id='experience' title={t('nav.experience')}>
  {jobs.map((job) => <Experience job={job} />)}
</SectionContent>
