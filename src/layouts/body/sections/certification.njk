<section class="resume-section" id="certifications">
    <div class="resume-section-content">
        <h2 class="mb-5">{{ certification.title }}</h2>
        {% for item in certification.certifications %}
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">{{item.course}} </h3>
                    <div class="subheading mb-3">{{item.center}}</div>
                </div>
                <div class="flex-shrink-0">
                    <span class="text-primary">{{item.date}}</span>
                </div>
            </div>
        {% endfor %}
    </div>
</section>